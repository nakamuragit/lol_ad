<div class = "container">

<%= form_with model: @scrim_ad, local: true do |form| %>
  
  <div class = "form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teamname %>
    <%= form.text_field :teamname, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teammember1 %>
    <%= form.text_field :teammember1, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teammember2 %>
    <%= form.text_field :teammember2, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teammember3 %>
    <%= form.text_field :teammember3, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teammember4 %>
    <%= form.text_field :teammember4, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :teammember5 %>
    <%= form.text_field :teammember5, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :sabmember1 %>
    <%= form.text_field :sabmember1, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :sabmember2 %>
    <%= form.text_field :sabmember2, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= form.label :contact %>
    <%= form.text_field :contact, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :closed %>
    <%= form.date_field :closed, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= form.label :start_time %>
    <%= form.date_field :start_time, class: "form-control" %>
  </div>
  
  <%= form.submit "応募を作成する",　class: "btn btn-primary" %>
<% end %>

</div>
